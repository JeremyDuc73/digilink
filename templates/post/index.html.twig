{% extends 'base.html.twig' %}

{% block title %}All posts{% endblock %}

{% block body %}

    {% for post in posts %}

        <div class="card">
            <h2>{{ post.title }}</h2>
            <h6>written by {{ post.author }}</h6>
            <h6>at {{ post.createdAt|date('H:s - d/m/Y') }}</h6>
            <p>{{ post.content }}</p>
        </div>

    {% endfor %}

{% endblock %}
